{% extends 'base.html.twig' %}
{% block body %}
{% include('navbar.html.twig') %}
    <div class="container">
      <div class="table-wrapper">
        <div class="table-title">
          <div class="row">
            <div class="col-sm-6">
              <h2><b>Empresa</b></h2>
            </div>
            <div class="col-sm-6">
              <a
                href="{{ path('empresa_new') }}"
                class="btn btn-success"><i class="material-icons">&#xE147;</i>
                <span>NUEVO</span></a>
            </div>
          </div>
        </div>
        <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>RUC</th>
                <th>RAZON SOCIAL</th>
                <th>DIRECCION</th>
                <th>ACCION</th>
            </tr>
        </thead>
        <tbody>
        {% for empresa in empresas %}
            <tr>
                <td>{{ empresa.id }}</td>
                <td>{{ empresa.ruc }}</td>
                <td>{{ empresa.razonSocial }}</td>
                <td>{{ empresa.direccion }}</td>
                <td>
                    <a href="{{ path('empresa_show', {'id': empresa.id}) }}"><i class="material-icons" data-toggle="tooltip" title="Ver">visibility</i></a>
                    <a href="{{ path('empresa_edit', {'id': empresa.id}) }}" class="edit"><i class="material-icons" data-toggle="tooltip" title="Editar">&#xE254;</i></a> 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
